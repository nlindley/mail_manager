<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @domain.name %>
</p>

<h2>Users</h2>
<ul>
  <% @domain.users.each do |user| %>
    <li><%= user.username %></li>
  <% end %>
</ul>

<h2>Aliases</h2>
<ul>
  <% @domain.aliases.each do |a| %>
    <li><%= a.source %> &rarr; <%= a.destination %></li>
  <% end %>
</ul>


<%= link_to 'Edit', edit_domain_path(@domain) %> |
<%= link_to 'Back', domains_path %>
